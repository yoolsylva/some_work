{
  "name": "APF-Tool",
  "version": "1.0.7",
  "description": "Auto Post Facebook",
  "main": "main.js",
  "scripts": {
    "start": "set mode=development&&electron .",
    "package-window": "electron-packager . auto-post-facebook --overwrite  --asar --platform=win32 --arch=ia32 --out=release-builds --electron-version=2.0.8 app-version=1.0.3",
    "release": "build --win --x64 -p always"
  },
  "build": {
    "appId": "com.electron.apftool",
    "mac": {
      "category": "autopostfacebook.app.facebook.automation"
    },
    "win": {
      "publish": ["github"]
    },
    "publish": [{
      "provider": "github",
      "owner": "yoolsylva",
      "repo": "auto_post_facebook"
    }]
  },
  "keywords": [
    "Electron",
    "facebook",
    "login",
    "api",
    "demo",
    "example",
    "facebook-authentication"
  ],
  "author": "Sylva",
  "license": "MIT",
  "devDependencies": {
    "electron": "^2.0.8",
    "electron-builder": "^20.39.0",
    "electron-packager": "^13.1.1"
  },
  "dependencies": {
    "electron-store": "^2.0.0",
    "electron-updater": "^4.0.6",
    "moment": "^2.24.0",
    "node-fetch": "^2.3.0",
    "puppeteer-core": "^1.13.0",
    "request": "^2.88.0",
    "rimraf": "^2.6.3"
  }
}
